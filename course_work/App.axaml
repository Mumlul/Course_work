<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="course_work.App"
             xmlns:local="using:course_work"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="../Styles/UI/Window.axaml"/>
        <StyleInclude Source="../Styles/UI/Button.axaml"/>
        <StyleInclude Source="../Styles/UI/Border.axaml"/>
        <StyleInclude Source="../Styles/UI/Text.axaml"/>
        <StyleInclude Source="../Styles/UI/TextBox.axaml"/>
    </Application.Styles>
</Application>