<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="course_work.Views.Pages.UserProfilePageView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Spacing="10">
                <Image Source="../../Assets/avalonia-logo.ico"></Image>
                <TextBlock Text="User_name"/>
                <Button Content="Изменить профиль"/>
            </StackPanel>
            
            
            <ScrollViewer Grid.Column="1">
                <StackPanel>
                    <UniformGrid Columns="3" Rows="2">
                        <Border Height="80" Background="LightBlue" Margin="2" CornerRadius="4"/>
                        <Border Height="80" Background="LightCoral" Margin="2" CornerRadius="4"/>
                        <Border Height="80" Background="LightGreen" Margin="2" CornerRadius="4"/>
                        <Border Height="80" Background="LightGoldenrodYellow" Margin="2" CornerRadius="4"/>
                        <Border Height="80" Background="LightPink" Margin="2" CornerRadius="4"/>
                        <Border Height="80" Background="LightGray" Margin="2" CornerRadius="4"/>
                    </UniformGrid>
                    <TextBlock Text="Тут еще какая-то информация" Margin="10"/>
                    <Button Content="что то делает" Margin="10"/>
                </StackPanel>
            </ScrollViewer>
            
        </Grid>
        
    </Grid>
</UserControl>
